package Monitor;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;

import javax.swing.JFrame;


import clientProject.LoginWindow;
import clientProject.UserListPane;
import clientProject.chatClient;

public class LogOffMonitor implements ActionListener{
	private chatClient client;
	private UserListPane usp;
	private JFrame frame;

	public LogOffMonitor(chatClient client, UserListPane usp, JFrame frame) {
		this.client = client;
		this.usp = usp;
		this.frame = frame;
	}
	
	@Override
	public void actionPerformed(ActionEvent a){
		int command = Integer.parseInt(a.getActionCommand());
		switch (command) {
		case 1:
			try{
				logOff();
			}catch(IOException e) {
				e.printStackTrace();
			}
			this.frame.setVisible(false);
			LoginWindow lw = new LoginWindow();
			
		case 2:
			try{
				logOff();
			}catch(IOException e) {
				e.printStackTrace();
			}
			this.frame.setVisible(false);
			//System.exit(0);
		}
	}
	
	public void logOff() throws IOException{
		this.client.logoff();
		
	}
}
